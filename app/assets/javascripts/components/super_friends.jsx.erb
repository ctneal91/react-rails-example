// Part 3 - Handle Events + Changing State
var TopLevel3 = React.createClass({
  getInitialState: function(){
    return {
      isGroupHappy: false
    }
  },

  _handleClick: function(){
    console.log('click heard on button')

    if (this.state.isGroupHappy === true){
      this.setState({
        isGroupHappy: false
      })
    } else {
      this.setState({
        isGroupHappy: true
      })
    }
  },

  render: function(){
    var friendsList = this.props.app_data

    var jsxRendering = friendsList.map(function(name){
      return <p>{name}</p>
    })

    if (this.state.isGroupHappy === true) {
      var div_stylezzz = "happy"
    } else {
      var div_stylezzz = "not-happy"
    }

    return (
      <div className={div_stylezzz}>
        <h1>The Best Cohort</h1>
        <button onClick={this._handleClick}>Change Mood</button>
        {jsxRendering}
      </div>
    )
  }
})

