  getInitialState: function(){
    var freshPropsList = this.props.app_data.map(function(name){return name})
    return {
      theFriendsGroup: freshPropsList
    }
  },

  _popOffBye: function(){
    console.log('somebody bout to get popped')

    var groupCopy = this.state.theFriendsGroup.map(function(name){return name})

    groupCopy.pop()

    this.setState({
      theFriendsGroup: groupCopy
    })
  },

  render: function(){
    var friendsList = this.state.theFriendsGroup

    var jsxRendering = friendsList.map(function(name){
      return <p>{name}</p>
    })

    return (
      <div className={"happy"}>
